<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ListView
        android:id="@+id/listViewMyLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:divider="@null"
        android:scrollingCache="false" >
    </ListView>

    <TextView
        android:id="@+id/textViewNoLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/no_lists"
        android:textStyle="bold"
        android:textSize="40sp" />

     <Button
        android:id="@+id/buttonStartList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewNoLists"
        android:background="@drawable/big_add_icon"
        android:onClick="onButtonAddClicked"/>
</RelativeLayout>